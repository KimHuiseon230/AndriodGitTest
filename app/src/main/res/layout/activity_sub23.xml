<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#888484"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/black">

        <LinearLayout
            android:id="@+id/screen1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E6AAAA"
            android:gravity="center"
           >

            <ImageView
                android:id="@+id/imgPic1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img002" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/screen2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#CC4040"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgPic2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/img003"/>

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <Button
            android:id="@+id/btnSelect1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Button" />

        <Button
            android:id="@+id/btnSelect2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:text="Button" />

    </LinearLayout>

</LinearLayout>